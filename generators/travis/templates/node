language: node_js
git:
  submodules: false
cache:
  yarn: true
  npm: true
  directories:
    - node_modules
before_install:
  - npm i -g npm@<%= npm %>
  - curl -o- -L https://yarnpkg.com/install.sh | bash -s -- --version <%= yarn %>
  - export PATH="$HOME/.yarn/bin:$PATH"
install:
  - yarn
stages:
  - name: lint
  - name: tests
    install: true
  - name: release
    install: true
    if: branch = master AND NOT tag AND type NOT IN (pull_request)
jobs:
  include:
    - stage: lint
      script: yarn lint
    - stage: tests
      script: yarn test --coverage
      after_success: test $TRAVIS_BRANCH = "master" && test $TRAVIS_TAG = "false" && test $TRAVIS_PULL_REQUEST = "false" && yarn coverage
    - stage: release
      script: yarn release
matrix:
  fast_finish: true
